@page
@model ServicesModel
@{
    ViewData["Title"] = "Services";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <ul class="services">
        <li class="collapsible">Therapeutic massage</li>
        <p class="content">Therapeutic massage helps relieve pain, reduce stress, and is usually focused on a specific problem—such as a frozen shoulder. </p>

        <li class="collapsible">Relaxation massage</li>
        <p class="content"></p>

        <li class="collapsible">Swedish massage</li>
        <p class="content"></p>

        <li class="collapsible">Deep tissue massage</li>
        <p class="content"></p>

        <li class="collapsible">Myofascial release</li>
        <p class="content"></p>

        <li class="collapsible">Lymphatic drainage</li>
        <p class="content"></p>

        <li class="collapsible">Reflexology</li>
        <p class="content"></p>

        <li class="collapsible">Aromatheropy</li>
        <p class="content"></p>

        <li class="collapsible">Hotstones</li>
        <p class="content"></p>

        <li class="collapsible">Cupping therapy</li>
        <p class="content"></p>

    </ul>
</div>
<script>
    var coll = document.getElementsByClassName("collapsible");
    var i;

    for (i = 0; i < coll.length; i++) {
        coll[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var content = this.nextElementSibling;
            if (content.style.display === "block") {
                content.style.display = "none";
            } else {
                content.style.display = "block";
            }
        });
    }
</script>